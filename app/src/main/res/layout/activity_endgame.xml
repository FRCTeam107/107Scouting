<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/endGameHabitatLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_of_screen_margin"
                    android:layout_marginBottom="@dimen/space_between_label_and_radiogroup"
                    android:text="@string/endGameHabitatLevelHeading"
                    android:textSize="@dimen/label_text_size"/>

                <RadioGroup
                    android:id="@+id/endGameHabitatLevelRadioQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_height"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/habOneEndGame_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/habOneEndGame"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/habTwoEndGame_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/habTwoEndGame"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/habThreeEndGame_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/habThreeEndGame"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/habNoneEndGame_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/habNoneEndGame"
                        style="@style/scoutingRadioButtonTheme" />
                </RadioGroup>

                <CheckBox
                    android:id="@+id/endGameDefenseAllMatch_chkbx"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_height"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginBottom="@dimen/space_between_label_and_radiogroup"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/endGameDefenseAllMatch_chkbxText"
                    style="@style/scoutingRadioButtonTheme" />


                <TextView
                    android:id="@+id/endGameDefenseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginBottom="@dimen/space_between_label_and_radiogroup"
                    android:text="@string/endGameDefenseHeading"
                    android:textSize="@dimen/label_text_size"/>

                <RadioGroup
                    android:id="@+id/endGameDefenseRadioQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_height"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/endGameDefenseEffective_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/endGameDefenseEffective"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/endGameDefenseIneffective_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/endGameDefenseIneffective"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/endGameDefenseNone_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/endGameDefenseNone"
                        style="@style/scoutingRadioButtonTheme" />
                </RadioGroup>

                <CheckBox
                    android:id="@+id/endGameFouls_chkbx"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_height"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginBottom="@dimen/space_between_label_and_radiogroup"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/endGameFoulsChkbxText"
                    style="@style/scoutingRadioButtonTheme" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="saveData"
            android:text="@string/saveButton" />

    </LinearLayout>

</FrameLayout>