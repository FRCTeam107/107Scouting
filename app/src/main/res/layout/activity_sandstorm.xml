<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/teamNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_of_screen_margin"
                    android:hint="@string/teamNumberHeading"
                    android:inputType="number"
                    android:maxLength="5"/>

                <EditText
                    android:id="@+id/matchNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:hint="@string/matchNumberHeading"
                    android:inputType="number"
                    android:maxLength="3"/>


                <TextView
                    android:id="@+id/sandstormStartingPositionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/startingPositionHeading"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginBottom="@dimen/space_between_label_and_radiogroup"
                    android:textSize="@dimen/label_text_size"/>

                <RadioGroup
                    android:id="@+id/sandstormStartingPositionRadioQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_height"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/habOneSandstorm_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/habOneSandstorm"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/habTwoSandstorm_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/habTwoSandstorm"
                        style="@style/scoutingRadioButtonTheme" />

                </RadioGroup>

                <TextView
                    android:id="@+id/sandstormStartingGamePieceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sandstormStartingGamePiece"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginBottom="@dimen/space_between_label_and_radiogroup"
                    android:textSize="@dimen/label_text_size"/>

                <RadioGroup
                    android:id="@+id/sandstormStartingGamePieceRadioQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_height"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/cargoSandstormStartingGamePiece_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/cargoSandstormStartingGamePiece"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/panelSandstormStartingGamePiece_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/panelSandstormStartingGamePiece"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/noSandstormStartingGamePiece_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/noSandstormStartingGamePiece"
                        style="@style/scoutingRadioButtonTheme" />
                </RadioGroup>


                <TextView
                    android:id="@+id/sandstormItemPlacedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sandstormItemPlacedHeading"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginBottom="@dimen/space_between_label_and_radiogroup"
                    android:textSize="@dimen/label_text_size"/>

                <RadioGroup
                    android:id="@+id/sandstormItemPlacedRadioQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_height"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/sandstormTopRocketItemPlaced_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/sandstormTopRocketItemPlaced"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/sandstormMiddleRocketItemPlaced_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/sandstormMiddleRocketItemPlaced"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/sandstormBottomRocketItemPlaced_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/sandstormBottomRocketItemPlaced"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/sandstormCargoshipItemPlaced_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/sandstormCargoshipItemPlaced"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/sandstormFloorItemPlaced_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/sandstormFloorItemPlaced"
                        style="@style/scoutingRadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/sandstormNothingPlacedItemPlaced_Radiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/nothingPlacedItemPlaced"
                        style="@style/scoutingRadioButtonTheme" />
                </RadioGroup>

                <CheckBox
                    android:id="@+id/sandstormBaseline_chkbx"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_height"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginBottom="@dimen/space_between_label_and_radiogroup"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/sandstormBaseline_chkbxText"
                    style="@style/scoutingRadioButtonTheme" />
            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToCycle"
            android:text="@string/goToCycleButton" />
    </LinearLayout>

</FrameLayout>